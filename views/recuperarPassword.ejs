<!DOCTYPE html>
<html>
<% include partials/head.ejs %>
<body>
	<% include partials/nav.ejs %>
    <form method="POST" action="/recuperarPassword">
		<div class="col-sm-6 col-md-offset-3">
	        <h4>Recuperación de Contraseña</h4>
	        <div class="panel panel-default">
	            <div class="panel-body form-horizontal payment-form">

                    <% if (noCoincide) { %>
                        <div class="col-md-14">
		            		<div class="alert alert-danger">
		            			<span>El usuario y el mail no se corresponden</span>
		            		</div>
		            	</div>
		            <% } %>

	            	<div class="form-group">
	                    <label for="nombreUsuario" class="col-sm-3 control-label">Nombre de Usuario</label>
	                    <div class="col-sm-9">
	                        <input type="text" class="form-control" maxlength="30" placeholder="JonSnow" id="nombreUsuario" name="nombreUsuario" value="<%=nombreUsuario%>" required>
	                    </div>
	                </div>
 
	                <div class="form-group">
	                    <label for="email" class="col-sm-3 control-label">E-Mail</label>
	                    <div class="col-sm-9">
	                        <input type="email" class="form-control" maxlength="50" placeholder="snowjon@castleblack.got" id="mail" name="mail" value="<%=mail%>" required>
	                    </div>
	                </div>
	               
	                <div class="form-group">
	                    <div class="col-sm-12 text-right">
	                        <button type="submit" class="btn btn-primary preview-add-button">
	                            Recuperar
	                        </button>
	                        <a href="/" class="btn btn-danger" role="button">
	                        	Cancelar
	                        </a>
	                    </div>
	                </div>
	            </div>
	        </div>            
	    </div> <!-- / panel preview -->
	</form>
	<% include partials/footer.ejs %>
	
</body>
</html>