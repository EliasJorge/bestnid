<!DOCTYPE html>
<html>
<% include partials/head.ejs %>
<body>
	<% include partials/nav.ejs %>
    <form method="POST" action="/iniciarSesion">
		<div class="col-sm-6 col-md-offset-3">
	        <h4>Por favor llene los campos:</h4>
	        <div class="panel panel-default">
	            <div class="panel-body form-horizontal payment-form">

                    <% if (usuarioExistente) { %>
                        <div class="col-md-14">
		            		<div class="alert alert-danger">
		            			<span>Usuario o contraseña incorrecto</span>
		            		</div>
		            	</div>
		            <% } %>

	            	<div class="form-group">
	                    <label for="nombreUsuario" class="col-sm-3 control-label">Nombre de Usuario</label>
	                    <div class="col-sm-9">
	                        <input type="text" class="form-control" maxlength="30" placeholder="JonSnow" id="nombreUsuario" name="nombreUsuario" value="<%=nombreUsuario%>" required>
	                    </div>
	                </div>
 
	                <div class="form-group">
	                    <label for="password" class="col-sm-3 control-label">Password</label>
	                    <div class="col-sm-9">
	                        <input type="password" class="form-control" pattern="[A-Za-z0-9]{8,16}" title="La contraseña debe tener al menos 8 caracteres" maxlength="16" placeholder="entre 8 y 16 caracteres alfanuméricos" id="password" name="password" required>
	                    </div>
	                </div>
	               
	                <div class="form-group">
	                    <div class="col-sm-12 text-right">
	                        <button type="submit" class="btn btn-primary preview-add-button">
	                            Iniciar sesión
	                        </button>
	                        <a href="/" class="btn btn-danger" role="button">
	                        	Cancelar
	                        </a>
	                    </div>
	                </div>
	            </div>
	        </div>            
	    </div> <!-- / panel preview -->
	</form>
	<% include partials/footer.ejs %>
	
</body>
</html>