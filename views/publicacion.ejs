<!DOCTYPE html>
<html>
<% include partials/head.ejs %>
<body>
	<% include partials/nav.ejs %>

	 <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!--	AL PEDO
            <div class="col-md-3">
                <p class="lead">Shop Name</p>
                <div class="list-group">
                    <a href="#" class="list-group-item active">Category 1</a>
                    <a href="#" class="list-group-item">Category 2</a>
                    <a href="#" class="list-group-item">Category 3</a>
                </div>
            </div>
            -->

            <div class="col-md-9">

                <div class="thumbnail">
                    <img class="img-responsive img-rounded" src="<%= publicacion.foto %>" alt="" style="max-height: 40em;">
                    <div class="caption-full">
                        <h1><%= publicacion.titulo %></h1>
                        <hr/>
                        <br/>
                        <p><%= publicacion.descripcion%></p>
                    </div>
                </div>

                <div class="well">
                <h4>Faltan <%= Math.floor((Date.UTC(publicacion.fechaFin.split('-')[0], publicacion.fechaFin.split('-')[1] - 1, publicacion.fechaFin.split('-')[2]) - Date.now()) / (1000 * 60 * 60 * 24))%> dias para que termine la publicacion
                </h4>
                    <div class="text-right">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Preguntar</button>
                        <a class="btn btn-success">Ofertar</a>
                    </div>


                    <hr>
                    <h4><%=preguntasYRespuestas.length%> preguntas</h4>
                    <hr>
                    <% if (preguntasYRespuestas.length !== 0 ) { %>
                        <% preguntasYRespuestas.forEach(function(datos) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <span class="pull-right"><%=datos.fechaPregunta.split('-')[2] + '/' + datos.fechaPregunta.split('-')[1] + '/' + datos.fechaPregunta.split('-')[0]%></span>
                                <p>
                                    <span class="glyphicon glyphicon-question-sign"></span>
                                    <%= datos.textoPregunta %>
                                </p>
                                <%if (datos.idRespuesta != null ){%>
                                    <div class="comment-content">
                                        <span class="glyphicon glyphicon-chevron-right"></span><%= datos.textoRespuesta%>
                                    </div>
                                <%}%>
                            </div>
                        </div>
                        <hr>
                        <% }); %>
                    <%} else {%>
                        <div class="alert alert-danger">Nadie ha realizado preguntas, escribe una!</div>
                    <%}%>

                </div>

            </div>
             <div class="col-md-3">
                <p class="lead">Opciones</p>
                <div class="list-group">
                    <a href="#" class="list-group-item disabled"><span class="glyphicon glyphicon-eye-close"></span> Ver ofertas</a>
                    <a href="#" class="list-group-item "><span class="glyphicon glyphicon-eye-open"></span> Ver ofertas</a>
                    <a href="#" class="list-group-item"><span class="glyphicon glyphicon-trash"></span> Eliminar Publicación</a>
                    <a href="#" class="list-group-item"><span class="glyphicon glyphicon-pencil"></span> Modificar Publicación</a>
                    <a href="#" class="list-group-item">Category 3</a>
                </div>
            </div>

        </div>

    </div>


    <!--modal fade para ofertar-->

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="exampleModalLabel">¿Tienes una duda de este producto?</h4>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="message-text" class="control-label">Pregunta:</label>
                <textarea class="form-control" id="message-text"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary">Enviar</button>
          </div>
        </div>
      </div>
    </div>


	<% include partials/footer.ejs %>
</body>
</html>
