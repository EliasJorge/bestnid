<!DOCTYPE html>
<html>
<% include partials/head.ejs %>
<body>
	<% include partials/nav.ejs %>
	 <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Categorías</p>
                <div class="list-group">
                    <a href="#" class="list-group-item">Electronica</a>
                    <a href="#" class="list-group-item">Indumentaria</a>
                    <a href="#" class="list-group-item">Muebles</a>
                </div>
            </div>
             <div class="dropdown pull-right">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                Ordenar por
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li role="presentation"><a role="menuitem" tabindex="-1" href="/">Más nuevos</a></li>
                <li role="presentation"><a role="menuitem" tabindex="-1" href="/?desc=1">Más viejos</a></li>
              </ul>
            </div>

            <div class="col-md-9">
            <br/>
            <% if (publicaciones.length) { %>
                <% publicaciones.forEach(function(datos) { %>
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail" style="height: 20em;  word-wrap: break-word;">
                    <a href="producto/<%=datos.idPublicacion%>">
                        <img class="img-responsive" src ="<%=datos.foto%>" style="width: 18em; height: 12em;" alt="" >
                    </a>
                        <div class="caption-full">
                            <h4><a href="producto/<%=datos.idPublicacion%>">
                                <% if (datos.titulo.length > 37) { %>
                                    <%= datos.titulo.substring(0,35) + '...' %>
                                <% } else { %>
                                    <%= datos.titulo %>
                                <% } %>
                            </a></h4>
                            <p  style="font-size: 0.9em;">
                            <% if (datos.descripcion.length > 78) { %>
                                <%= datos.descripcion.replace("\n"," ").substring(0,75) + '...' %>
                            <% } else { %>
                                <%= datos.descripcion.replace("\n"," ") %>
                            <% } %>
                            </p>
                        </div>
                    </div>
                </div>
                <%})%>
            <% } else {%>
                <div class="alert alert-danger">No hay publicaciones disponibles</div>
            <% } %>
            </div>

        </div>

    </div>
    <!-- /.container -->
	<% include partials/footer.ejs %>
	
</body>
</html>