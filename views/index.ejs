<!DOCTYPE html>
<html>
<% include partials/head.ejs %>
<body>
	<% include partials/nav.ejs %>
	 <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Shop Name</p>
                <div class="list-group">
                    <a href="#" class="list-group-item">Electronica</a>
                    <a href="#" class="list-group-item">Indumentaria</a>
                    <a href="#" class="list-group-item">Muebles</a>
                </div>
            </div>

            <div class="col-md-9">
            	
            <% if (publicaciones.length) { %>
                <% publicaciones.forEach(function(datos) { %>
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img class="img-responsive" src ="<%=datos.foto%>" style="width: 18em; height: 12em;"alt="">
                        <div class="caption-full">
                            <h4><a href="producto/<%=datos.idPublicacion%>"><%= datos.titulo %></a>
                            </h4>
                            <p><%= datos.descripcion %></p>
                        </div>
                    </div>
                </div>
                <%})%>
            <% } else {%>
                <div class="alert alert-danger">No hay publicaciones disponibles</div>
            <% } %>
            </div>

        </div>

    </div>
    <!-- /.container -->
	<% include partials/footer.ejs %>
	
</body>
</html>